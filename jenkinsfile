pipeline {
    agent any

    tools{
        maven 'Maven'
    }

    environment{
        DOCKER_IMAGE ='gestion-pointage:1.1'
    }

    stages {
       stage('Checkout') { 
            steps {
                checkout scm
            }
        }

      
        stage('Build') {
            steps {
                bat './mvnw clean package'
            }
        }

        stage('Test') { 
            steps {
                bat './mvnw test'
            }
        }

        stage('Build Docker Image') { 
            steps {
                bat 'docker build -t gestion-pointage:1.1 .'
            }
            
        }

        
        stage('Deploy') { 
            steps {
                bat 'docker run -d -p 8084:8084 --name tpdevops gestion-pointage:1.1'
            }
        }
    }
}