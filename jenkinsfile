pipeline {
    agent any

    tools{
        maven 'Maven'
    }

    environment{
        DOCKER_IMAGE ='gestion-pointage:1.1'
    }

    stages {
       stage('Checkout') { 
            steps {
                checkout scm
            }
        }

      
        stage('Build') {
            steps {
                bat './mvnw clean package'
            }
        }

        stage('Test') { 
            steps {
                bat './mvnw test'
            }
        }

        stage('Build Docker Image') { 
            steps {
                bat 'docker build -t ${DOCKER_IMAGE} .' 

            }
            docker pull "$DOCKER_IMAGE"

        }

        
        stage('Deploy') { 
            steps {
                bat 'docker run -d -p 8087:8080 --name tpdevops ${DOCKER_IMAGE}'
            }
        }
    }
}